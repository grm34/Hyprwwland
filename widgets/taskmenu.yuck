(defvar taskmenu_tabs '[
  {"class": "tab-off", "onclick": "updates_content", "icon": " "},
  {"class": "tab-off", "onclick": "standby_content", "icon": "󰈈 "},
  {"class": "tab-off", "onclick": "settings_content", "icon": " "},
  {"class": "tab-off", "onclick": "audio_content", "icon": " "},
  {"class": "tab-off", "onclick": "network_content", "icon": "󰛳 "},
  {"class": "tab-off", "onclick": "calendar_content", "icon": " "},
  {"class": "tab-off", "onclick": "power_content", "icon": "⏻ "}]'
)


(defwidget tabs []
  (box :class "taskmenu_tabs"
       :orientation "v"
       :spacing 10

    (for tab in taskmenu_tabs
      (button :class {tab.class}
              ; :onclick "${EWW_CMD} open ${tab.onclick}"
        (label :text {tab.icon}
               :style "font-size: 24px")
    ))
))


(defwidget content []
  (box :class "taskmenu_content"
       :orientation "v"
       :space-evenly false

    (box
      (button :halign "start"
              :onclick "${EWW_CMD} close taskmenu"
        (label :text "x"))
      (label :text "allo"))
))


(defwidget taskmenu []
  (box :class "taskmenu"
    (box :orientation "h"
         :spacing 14

      (content)
      (tabs)
)))

