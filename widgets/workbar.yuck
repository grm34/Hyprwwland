(defwidget workbar []
  (box :class "workbar"
       :orientation "h"
       :halign "start"
       :spacing 6

    (for ws in workspaces
      (button :class {ws.class}
              :onclick "hyprctl dispatch workspace ${ws.index}"
        (label :text {ws.icon})))
))

