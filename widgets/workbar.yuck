(defwidget workbar []
  (box :class "workbar"
       :orientation "h"
       :halign "start"
       :space-evenly false

    (for ws in workspaces
      (button :class {ws.class}
              :onclick "hyprctl dispatch workspace ${ws.index}"
        (label :text {ws.icon})))
))

