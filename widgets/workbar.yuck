  {"index": "2", "class": "ws-inactive", "icon": " ₂"},
  {"index": "3", "class": "ws-inactive", "icon": " ₃"},
  {"index": "4", "class": "ws-inactive", "icon": "󱐏 ₄"},
  {"index": "5", "class": "ws-inactive", "icon": " ₅"},
  {"index": "6", "class": "ws-inactive", "icon": "󰈙 ₆"},
  {"index": "7", "class": "ws-inactive", "icon": "󰓃 ₇"},
